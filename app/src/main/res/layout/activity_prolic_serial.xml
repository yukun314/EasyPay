<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#000"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical">
			<Button
				android:id="@+id/activity_prolic_serial_button"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="设置"
				android:textColor="#fff"/>

			<CheckBox
				android:id="@+id/activity_prolic_serial_cb"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:checked="true"
				android:text="客显"
				android:textColor="#fff"/>

			<Button
				android:id="@+id/activity_prolic_serial_star"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="star"
				android:textColor="#fff"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical">
			<TextView
				android:id="@+id/activity_prolic_serial_bluetooth_message"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#fff"
				android:textSize="18sp"/>

			<ListView
				android:id="@+id/activity_prolic_serial_bluetooth_list"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
		</LinearLayout>
	</LinearLayout>

	<LinearLayout android:layout_width="match_parent"
	              android:layout_height="match_parent"
	              android:orientation="horizontal">
		<ImageView
			android:id="@+id/activity_prolic_serial_image"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		<ScrollView android:layout_width="wrap_content"
		            android:layout_height="match_parent">

			<TextView
				android:id="@+id/activity_prolic_serial_message"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#fff"/>
		</ScrollView>
	</LinearLayout>


</LinearLayout>